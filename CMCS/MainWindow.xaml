<Window
    x:Class="CMCS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Contract Monthly Claim System (CMCS)"
    Width="1000"
    Height="700"
    WindowStartupLocation="CenterScreen">
    <Grid Background="#f8f8f8">
        <TabControl>
            <!--  LOGIN TAB  -->
            <TabItem Header="Login">
                <StackPanel
                    Width="400"
                    Margin="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="22"
                        FontWeight="Bold"
                        Text="CMCS Login" />

                    <TextBlock Text="Email:" />
                    <TextBox Height="30" Margin="0,5,0,15" />

                    <TextBlock Text="Password:" />
                    <PasswordBox Height="30" Margin="0,5,0,15" />

                    <Button
                        Width="120"
                        Height="35"
                        Margin="0,10"
                        HorizontalAlignment="Center"
                        Content="Login" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Foreground="Blue"
                        Text="Forgot Password?"
                        TextDecorations="Underline" />
                </StackPanel>
            </TabItem>

            <!--  LECTURER SUBMIT CLAIM TAB  -->
            <TabItem Header="Lecturer Claim">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="New Claim for Month/Year:" />
                        <ComboBox Width="120" Margin="0,0,10,0">
                            <ComboBoxItem Content="August 2025" />
                            <ComboBoxItem Content="September 2025" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <TextBlock Width="50" Text="Date:" />
                            <DatePicker Width="150" />
                            <TextBlock Margin="20,0,0,0" Text="Hours:" />
                            <TextBox Width="80" />
                        </StackPanel>

                        <TextBlock Text="Notes:" />
                        <TextBox
                            Height="60"
                            Margin="0,5,0,15"
                            TextWrapping="Wrap" />

                        <TextBlock Text="Upload Document:" />
                        <Button
                            Width="150"
                            Margin="0,5,0,15"
                            Content="Choose File..." />

                        <TextBlock Text="Attachments:" />
                        <ListBox Height="100" Margin="0,5,0,15" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,30,0"
                            VerticalAlignment="Center"
                            Text="Totals: 0 Hours, R0.00" />
                        <Button
                            Width="100"
                            Margin="0,0,10,0"
                            Content="Save Draft" />
                        <Button Width="120" Content="Submit Claim" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--  COORDINATOR/MANAGER APPROVALS TAB  -->
            <TabItem Header="Approvals">
                <DockPanel Margin="20">
                    <StackPanel
                        Margin="0,0,0,10"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="Filter:" />
                        <ComboBox Width="150" Margin="10,0,0,0">
                            <ComboBoxItem Content="Pending" />
                            <ComboBoxItem Content="Verified" />
                            <ComboBoxItem Content="Approved" />
                        </ComboBox>
                    </StackPanel>

                    <DataGrid
                        Height="300"
                        Margin="0,0,0,10"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Lecturer}"
                                Header="Lecturer" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding Month}"
                                Header="Month" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding Status}"
                                Header="Status" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            Width="80"
                            Margin="0,0,10,0"
                            Content="Verify" />
                        <Button
                            Width="90"
                            Margin="0,0,10,0"
                            Content="Approve" />
                        <Button Width="80" Content="Reject" />
                    </StackPanel>
                </DockPanel>
            </TabItem>

            <!--  STATUS TRACKING TAB  -->
            <TabItem Header="Claim Status">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Your Claims" />
                        <ListBox>
                            <ListBoxItem Content="Aug 2025 — Pending" />
                            <ListBoxItem Content="Jul 2025 — Verified" />
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Claim Summary" />
                        <TextBlock Text="Hours: 12, Amount: R2400" />
                        <TextBlock Margin="0,10,0,5" Text="Status Timeline:" />
                        <TextBlock
                            FontWeight="Bold"
                            Foreground="Green"
                            Text="Pending → Verified → Approved → Settled" />
                        <TextBlock Margin="0,15,0,5" Text="Activity Log:" />
                        <ListBox Height="200">
                            <ListBoxItem Content="Coordinator verified claim on 05 Aug" />
                            <ListBoxItem Content="Manager approved claim on 06 Aug" />
                        </ListBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
